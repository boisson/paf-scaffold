<div class="modal hide" id="modal-ajax-error">
  <%= simple_form_for :client_notification_error, html: {class: 'form-horizontal'} do |f| %>
  <div class="modal-header">  
    <h3><%= t('general.headers.modal_ajax_error')%></h3>
  </div>
  <div class="modal-body">
    <%= t('general.messages.modal_ajax_error')%><br />
    <%= f.input :message, as: :text, input_html: {rows: 3, class: 'input-xlarge'} %>
  </div>
  <div class="modal-footer">
    <%= f.submit t('general.actions.send_email'), class: 'btn btn-primary', name: nil %>
    <a href="javascript:$('#modal-ajax-error').modal('hide')" class="btn"><%= t('general.actions.close') %></a>
  </div>
  <% end -%>
</div>