<div class="field">
  <%= f.attribute_fields do |a| %>
    <%= a.attribute_select(include_blank: false)  %>
  <% end %>
  <%= f.predicate_select %>
  <%= f.value_fields do |v| %>
    <%= v.text_field :value %>
  <% end %>
  <%= link_to '<i class="icon-trash"></i>'.html_safe, '#', class: "remove_fields btn", title: t('general.actions.advanced-search.remove-conditions') %>
</div>